@using Adresar.Properties
@model Adresar.Models.ContactViewModel

@{
    ViewBag.Title = Resources.Contact;
}

<!-- Page header start -->
<div class="row">
    <div class="col-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</div>
<!-- Page header end -->
<!-- Allert message start -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><strong>@Resources.Success:</strong> @TempData["Success"].ToString()</p>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <p><strong>@Resources.Error:</strong> @TempData["Error"].ToString()</p>
    </div>
}
<!-- Allert message end -->
<!-- Edit form start -->
@using (Html.BeginForm("Edit", "Contacts", FormMethod.Post, new { id = "ContactForm" }))
{
    @Html.AntiForgeryToken()
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.Ime, Resources.FirstName, htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-4 col-xs-4 col-12" })
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-12">
                @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 col-0"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Prezime, Resources.LastName, htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-4 col-xs-4 col-12" })
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-12">
                @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 col-0"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telefon, Resources.Phone, htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-4 col-xs-4 col-12" })
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-12">
                @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 col-0"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, Resources.Email, htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-4 col-xs-4 col-12" })
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-12">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 col-0"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.VrijemeKreiranja, Resources.Created, htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-4 col-xs-4 col-12" })
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-12">
                @Html.EditorFor(model => model.VrijemeKreiranja, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 col-0"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, Resources.Updated, htmlAttributes: new { @class = "control-label col-lg-2 col-md-2 col-sm-4 col-xs-4 col-12" })
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 col-12">
                @Html.EditorFor(model => model.ZadnjaIzmjena, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
            </div>
            <div class="col-lg-4 col-md-4 col-sm-0 col-xs-0 col-0"></div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-4 col-lg-11 col-md-11 col-sm-10 col-xs-9 col-12">
                <button type="submit" class="btn btn-primary" id="btnSubmit">@Resources.Submit</button>
            </div>
        </div>
    </div>
}
<!-- Edit form end -->
<div>
    @Html.ActionLink(@Resources.BackToContactList, "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ContactJs")
}